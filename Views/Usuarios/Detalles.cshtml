@model ExamenTeCAS.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h1>Información del Cliente</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apaterno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apaterno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amaterno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amaterno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Identificacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Identificacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
    </dl>
</div>
<div>

    <a class="btn btn-primary" asp-controller="Cuentas" asp-action="Cuentas" asp-route-id="@Model.Id">Cuentas</a>
    <a class="btn btn-warning" asp-action="Editar" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@Model.Id">Eliminar</a>
    <hr />
    <a class="btn btn-secondary" asp-action="Clientes">Volver</a>
</div>
